{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "module": "ESNext",
    "target": "ES2019",
    "jsx": "react",
    "jsxFactory":"tsx",
    "sourceMap":true,
    "skipLibCheck": true,
    "allowJs": true,
    "importHelpers":true,
    "resolveJsonModule":true,
    "allowSyntheticDefaultImports":true,
    "downlevelIteration": true,
    "preserveConstEnums": true
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts"
  ]
}